<% provide(:title, 'Users') %>
<h1>Users</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <table class='table'>
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr id="user_<%= user.id %>">
            <% if user.admin %>
              <td><%= link_to "#{user.email} (admin)", user %></td>
            <% else %>
              <td><%= link_to user.email, user %></td>
            <% end %>
            <td><%= user.name %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
